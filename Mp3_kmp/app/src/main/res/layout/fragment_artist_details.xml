<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.fragment.mainFrags.ArtistDetailsFragment"


    android:background="@android:color/black"
    >


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/artist_detail_fragment_band_image"

            android:layout_width="match_parent"
            android:layout_height="200dp"

            app:layout_constraintTop_toTopOf="parent"

            tools:background="@drawable/generic_cover"
            />

        <TextView
            android:id="@+id/artist_detail_fragment_band_name"

            android:layout_width="0dp"
            android:layout_height="40dp"
            android:background="@android:color/transparent"

            app:layout_constraintStart_toStartOf="@id/artist_detail_fragment_band_image"
            app:layout_constraintEnd_toEndOf="@id/artist_detail_fragment_band_image"
            app:layout_constraintBottom_toBottomOf="@id/artist_detail_fragment_band_image"

            android:textColor="@color/white"
            android:textSize="20dp"

            tools:text="@string/album_nome_default"
            />


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/artist_detail_fragment_band_albums_recyler"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            app:layout_constraintTop_toBottomOf="@id/artist_detail_fragment_band_image"
            app:layout_constraintBottom_toTopOf="@id/artist_detail_fragment_band_faixas_recyler"

            tools:itemCount="1"
            tools:orientation="horizontal"
            tools:listitem="@layout/album_float_item"
            />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/artist_detail_fragment_band_faixas_recyler"


            android:layout_width="match_parent"
            android:layout_height="0dp"

            app:layout_constraintTop_toBottomOf="@id/artist_detail_fragment_band_albums_recyler"
            app:layout_constraintBottom_toBottomOf="parent"

            tools:background="@android:color/black"
            tools:itemCount="10"
            tools:listitem="@layout/faixa_list_item"
            />


    </androidx.constraintlayout.widget.ConstraintLayout>



</FrameLayout>