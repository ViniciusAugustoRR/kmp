<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent" xmlns:app="http://schemas.android.com/apk/res-auto"
             tools:context=".view.fragment.mainFrags.MenuFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <androidx.viewpager2.widget.ViewPager2
                    android:id="@+id/menu_frag_pager"

                    android:layout_width="0dp"
                    android:layout_height="0dp"

                    app:layout_constraintHeight_percent="0.879"

                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toTopOf="@id/menu_frag_tabLayout"

                    android:background="@color/colorPrimaryDark"
            />

            <com.google.android.material.tabs.TabLayout
                    android:id="@+id/menu_frag_tabLayout"

                    android:layout_width="0dp"
                    android:layout_height="0dp"

                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/menu_frag_pager"
                    app:layout_constraintBottom_toBottomOf="parent"

                    tools:background="@color/colorPrimary"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>